<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.udaysaikumar.rankquest.Clg_Cutoff_list">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O= OpenRank   C= CloseRank "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:id="@+id/textView15" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="search here..."
            android:inputType="textPersonName" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group By: "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/branchsearch"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/cutoffrecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="6dp"
        android:background="@color/colorPrimary"
        android:padding="1dp"
        android:scrollbarSize="50dip"
        android:scrollbarStyle="outsideInset"
        app:fastScrollEnabled="true"
        app:fastScrollHorizontalThumbDrawable="@drawable/drawthumb"
        app:fastScrollHorizontalTrackDrawable="@drawable/line_draw"
        app:fastScrollVerticalThumbDrawable="@drawable/drawthumb"
        app:fastScrollVerticalTrackDrawable="@drawable/line_draw" />

   <!-- <EditText
        android:id="@+id/searchtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="search...."
        android:inputType="textPersonName" />-->
</LinearLayout>
